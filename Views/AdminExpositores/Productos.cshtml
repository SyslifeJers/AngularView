@model IEnumerable<AngularView.Models.Context.ProductoServicio>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_LayoutExpositor.cshtml";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Registrar productoso o servicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Decripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioNormal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modificado)
            </th>
            <th>
                Interesados
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="AgregarImg" asp-route-id="@item.Id">Agregar imagen</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Decripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioNormal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioDescuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
