@model AngularView.Models.Expositor

@{
    ViewData["Title"] = "HolaAngularView";
    Layout = "~/Views/Shared/_LayoutExpositor.cshtml";
}

<h1>Bienvenido a Angular View</h1>

<h4>Expositor confirma tus datos o modificalos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="HolaAngularView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Correo" />
            <input type="hidden" asp-for="Registro" />
            <div class="form-group">
                <label class="control-label">Agrega tu contraseña para futuros accesos</label>
                <input required type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellidos" class="control-label"></label>
                <input asp-for="Apellidos" class="form-control" required />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input type="number" asp-for="Celular" required maxlength="10" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre de negocio (35)</label>
                <input required asp-for="Negocio" class="form-control" maxlength="35"/>
                <span asp-validation-for="Negocio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
