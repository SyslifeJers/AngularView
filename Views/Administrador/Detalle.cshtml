@model AngularView.Models.Context.Vendedores

@{
    ViewData["Title"] = "Detalle";
    Layout = "_Administrador";
}

<h1>Detalle</h1>

<div>
    <h4>Vendedores</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modificado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modificado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCaducidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCaducidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comision)
        </dd>
    </dl>
</div>
<h3>Ventas</h3>
<table class="table">
    <thead>
        <tr>
            <th>
               Fecha
            </th>
            <th>
            Costo de cajon
            </th>
            <th>
              Estatus
            </th>
            <th>
                Cajon
            </th>
            <th>
               Negocio
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VentaEspacio)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCajonNavigation.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdExpositorNavigation.Negocio)
                </td>

            </tr>
        }
    </tbody>
</table>
