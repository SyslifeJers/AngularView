@model IEnumerable<AngularView.Models.Caja>
@{
    ViewData["Title"] = "Cajas";
    Layout = "_LayoutVendedor";
}

<h1>CajonesDiponibles</h1>


    <div class="row">
        @foreach (var item in Model)
        {
        <div class="card col-3">
            <div class="card-header">
                <h4>@item.Descripcion</h4>
                <p>
                    $ @item.Costo.ToString()
                </p>
            </div>
            <div class="card-body">
                @if (item.Ocupado == 0)
                {
                    <p>Disponible</p>
                }
                @if (item.Ocupado == 1)
                {
                    <p>Apartado</p>
                }
                @if (item.Ocupado == 2)
                {
                    <p>Ocupado</p>
                }

                @if (item.Ocupado == 0)
                {
                    <a class="btn btn-outline-info" asp-action="TomarCajon" asp-route-id="@item.Id">Tomar</a>
                }


            </div>
        </div>
        }
    </div>
    