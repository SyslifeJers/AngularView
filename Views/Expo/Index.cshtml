@model IEnumerable<AngularView.Models.Sala>
@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AngularView</title>
    <link rel="shortcut icon" type="image/png" href="~/Img/angularView.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StiloExpo.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200;300;400;500;600;700;800&family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <div>

        <div>
            <img class="fondo-pantalla" src="~/Img/fonExpo.png">
            <div>
                <div class="video-container-entrance"></div>
                <div class="number-container">
                    <div class=" border-gray mx-sm-1 p-2" style="background-color: transparent;">



                        <div class="" style="font-size: 1.5em;">Visitantes</div>
                        <div class=""><p style="font-size: 1.5em;background-color: black;color: #17bba0;font-family: 'Orbitron', sans-serif;border-radius: 10px;padding: .2em;">1354</p></div>

                    </div>
                </div>
                <a class="boton-informacion cursor-hover-animation" asp-action="ModuloInformacion"></a>
                <a class="boton-registro cursor-hover-animation" asp-action="Registro"></a>
                <a class="boton-sala1 cursor-hover-animation" asp-action="cajones" asp-route-id="1"></a>
                <a class="boton-sala2 cursor-hover-animation" asp-action="cajones" asp-route-id="2"></a>
