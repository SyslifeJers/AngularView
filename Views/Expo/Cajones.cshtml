@model List<AngularView.Models.ViewModels.ModelCajasExpo>

@{
    ViewData["Title"] = "Cajones";
    Layout = null;
}
    <!DOCTYPE html>

    <html style="width: 100%;overflow-x: hidden;">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - AngularView</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
        <link rel="shortcut icon" type="image/png" href="~/Img/angularView.png" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Style.css" />
    </head>
