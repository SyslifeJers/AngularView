@model IEnumerable<AngularView.Models.Caja>

@{
    ViewData["Title"] = "Cajones";
    Layout = "~/Views/Shared/Expo_Layout.cshtml";
    string estilo = "";
}

<div class="row">
    @foreach (var item in Model)
    {
        @if (item.Ocupado == 0)
        {
            estilo = " ";
        }
        @if (item.Ocupado == 1)
        {
            estilo = "bg-info";
        }
        @if (item.Ocupado == 2)
        {
            estilo = "bg-success";
        }
        <div class="card col-sm-6 col-md-2 col-lg-2">
            <div class="card-header @estilo">
                <h5>Espacio - @item.Descripcion</h5>
                <p>
                    $ @item.Costo.ToString()
                </p>
            </div>
            <div class="card-body">
                @if (item.Ocupado == 0)
                {
                    <p>Disponible</p>
                }
                @if (item.Ocupado == 1)
                {
                    <p>Apartado</p>
                }
                @if (item.Ocupado == 2)
                {
                    <p>Ocupado</p>
                }

                @if (item.Ocupado == 0)
                {
                    <a class="btn btn-outline-info" asp-action="TomarCajon" asp-route-id="@item.Id">Tomar</a>
                }


            </div>
        </div>
    }
</div>
