@model AngularView.Models.Vendedores

@{
    Layout = "_LayoutVendedor";

}

            <div class="col-12">
                <div class="row">
                    <div class="col-sm-12 col-md-3 col-lg-3">
                        <div class="card">
                            <div class="card-header">
                                <h3>Ver mis ventas </h3>
                            </div>
                            <div class="card-body">
                                <a asp-controller="Salas" asp-action="DetallesAlta" class="btn btn-info">
                                    Ver
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class=" col-sm-12 col-md-3 col-lg-3">
                        <div class="card">
                            <div class="card-header">
                                <h3>Nueva venta </h3>
                            </div>
                            <div class="card-body">
                                <a href="@Url.ActionLink("Index","Salas")" class="btn btn-success">
                                    Agregar
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class=" col-sm-12 col-md-3 col-lg-3">
                        <div class="card">
                            <div class="card-header">
                                <h3>Tu comision actual</h3>
                            </div>
                            <div class="card-body">
                                <h4>$  @Model.Comision.ToString() </h4>  
                            </div>
                        </div>
                    </div>
                </div>
            </div>

